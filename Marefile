
targets = {
  mare = cppApplication + {
    dependencies = { 
      "libmare"
    }
    libs = {
      "mare"
    }
    libPaths = {
      "$(buildDir)/libmare"
    }
    includePaths = {
      "src/libmare"
    }
    root = "src/mare"
    files = {
      "src/mare/**.cpp" = cppSource
      "src/mare/**.h"
    }
    if platform != "Win32" {
      files -= "src/mare/Tools/Win32/**"
    }
  }
  libmare = cppStaticLibrary + {
    buildDir = "$(buildDir)/libmare"
    root = "src/libmare"
    files = {
      "src/libmare/**.cpp" = cppSource
      "src/libmare/**.h"
    }
  }
}

linkFlags += {
  if tool == "vcxproj" { "/SUBSYSTEM:CONSOLE" }
}

cppFlags += { 
  if tool == "vcxproj" && configuration == "Release" { -"/O2", "/O1 /MT /GF" }
}
